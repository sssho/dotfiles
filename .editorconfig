root = true

[*]
end_of_line = lf
charset = utf-8

trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 4

[*.cpp]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 4

[*.make]
indent_style = tab
tab_width = 4

[*.el]
tab_width = 2

[*.{v,sv,svh,sva}]
tab_width = 4
